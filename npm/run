#!/bin/bash
DIR="$(cd "$(dirname "$0")" && pwd)"
coffee="$DIR/../node_modules/.bin/coffee"
source_dir="$DIR/../source"
build_dir="$DIR/../build"
npm_dir="$DIR/.."

clean() {
  clean-build-dir
}

clean-build-dir() {
  rm -rf $build_dir/**/*.js $build_dir/**/*.map
}

build() {
  build-source
}

build-source() {
  $coffee -cmb -o $build_dir $source_dir
}

tests() {
  run-specs
}

run-specs() {
  runner="$DIR/../spec/runner.coffee"
  NODE_PATH=$NODE_PATH:$npm_dir $coffee $runner
}

argv=("$*")
for arg in $argv; do eval ${arg}; done
